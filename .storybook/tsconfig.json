{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./lib",
    "jsx": "react",
    "lib": [
      "dom",
      "es6"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "stories/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
