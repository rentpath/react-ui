{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "./lib",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "dom"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
