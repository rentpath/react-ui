{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": false,
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "jsx": "react",
    "moduleResolution": "node",
    "lib" : [
      "es2016.array.include", "es6", "dom"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "__tests__"
  ]
}
