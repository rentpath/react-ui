{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./lib",
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "lib"
  ]
}
